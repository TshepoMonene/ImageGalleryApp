

<div class="modal fade" id="uploadImage">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="title">UploadImage</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Upload" id="uploadForm" method="post" enctype="multipart/form-data">
                      <div class="form-group">
                        <label for="Title">Title</label><br />
                        <input  for="Title" type="text" name="title" /><br />
                      </div>
                      <div class="form-group">
                        <label for="Description">Description</label><br />
                        <textarea for="Description" cols="20" id="Description" name="description" rows="2"></textarea><br />
                      </div>
                      <div class="form-group">
                        <label for="upload">Upload</label><br />
                        <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" /><br />

                      </div>
                       
            
                    </form>            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>

    </div>

</div>
