@using ImageGalleryWeb.Extensions;

@model Photo
@{
    ViewData["Title"] = "detailPage";
    var imgSrc = @Model.UploadedImage.GetImage().ToString();
}

<div class="container-xl px-4 mt-4"> 
   <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Picture</div>
                <div class="card-body text-center">
                    <img class="img-account-profile rounded-circle mb-2" src="@Url.Content(imgSrc)" alt="" style="width:300px;height:300px">
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>                 
                </div>
            </div>
        </div>
        <div class="col-xl-8">

            <div class="card mb-4">
                <div class="card-header">Details</div>
                <div class="card-body">

                    @using(Html.BeginForm("update","Photos",FormMethod.Post))
                    {

                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Title">Title</label>
                            @Html.EditorFor(c =>c.Title);
                        </div>

                        <div class="row gx-3 mb-3">

                            <div class="col-md-6">
                                <label class="small mb-1" asp-for="Description">Description</label>
                                @Html.EditorFor(c => c.Description);
                            </div>

                        </div>

                        @Html.HiddenFor(c=> c.Id);
                        @Html.HiddenFor(c=> c.UploadedImage)
                        ;

                        <button class="btn btn-primary" type="submit" id="saveChanges">Save Changes
                        </button>
                        
                    }
                </div>
            </div>
        </div>
    </div>
</div>
